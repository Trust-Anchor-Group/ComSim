<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Authors>Peter Waher</Authors>
    <Company>Trust Anchor Group AB</Company>
    <Product>ComSim</Product>
    <Copyright>Copyright Â© Trust Anchor Group 2023. All rights reserved.</Copyright>
    <Description>Extension library to the ComSim simulator, providing support for ModBus communication.</Description>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Schema\ComSimModBus.xsd" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Schema\ComSimModBus.xsd">
      <SubType>Designer</SubType>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Waher.Networking" Version="4.5.2" />
    <PackageReference Include="Waher.Networking.Modbus" Version="2.1.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\TAG.Simulator\TAG.Simulator.csproj" />
  </ItemGroup>

</Project>
