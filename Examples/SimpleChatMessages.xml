<?xml version="1.0" encoding="utf-8"?>
<Model xmlns="http://trustanchorgroup.com/Schema/ComSim.xsd"
       xmlns:xmpp="http://trustanchorgroup.com/Schema/ComSim/XMPP.xsd"
       timeBase="StartOfSimulation"
       timeUnit="PT1S"
       timeCycle="PT1M"
       duration="PT10M">
  <Meta>
    <Title>Simple Chat Messages</Title>
    <Description>Simulates 40 XMPP clients (20 TCP, 10 BOSH, 10 Web-sockets) chatting with each other randomly during 10 minutes, at a frequency of 100 started chat sessions per minute.</Description>
  </Meta>
  <Assemblies>
    <Assembly fileName="TAG.Simulator.XMPP.dll"/>
  </Assemblies>
  <Actors>
    <xmpp:XmppActorTcp domain="lab.tagroot.io" userName="XmppTcp" id="XmppTcp" N="20" apiKey="LabApiKey1" secret="LabSecret1" alwaysConnected="true">
      <ExternalEvent name="ChatMessage" event="MessageReceived" actorName="To">
        <Parameter name="e"/>
      </ExternalEvent>
    </xmpp:XmppActorTcp>
    <xmpp:XmppActorBosh domain="lab.tagroot.io" userName="XmppBosh" id="XmppBosh" N="10" apiKey="LabApiKey1" secret="LabSecret1" alwaysConnected="true">
      <ExternalEvent name="ChatMessage" event="MessageReceived" actorName="To">
        <Parameter name="e"/>
      </ExternalEvent>
    </xmpp:XmppActorBosh>
    <xmpp:XmppActorWebSocket domain="lab.tagroot.io" userName="XmppWebSocket" id="XmppWebSocket" N="10" apiKey="LabApiKey1" secret="LabSecret1" alwaysConnected="true">
      <ExternalEvent name="ChatMessage" event="MessageReceived" actorName="To">
        <Parameter name="e"/>
      </ExternalEvent>
    </xmpp:XmppActorWebSocket>
  </Actors>
  <Distributions>
    <Uniform id="HundredPerMinute" from="0" to="60" N="100"/>
  </Distributions>
  <Events>
    <StochasticEvent distribution="HundredPerMinute" activity="StartChatSession">
      <ActorReference name="From" exclusive="true">
        <FromPopulation actor="XmppTcp"/>
        <FromPopulation actor="XmppBosh"/>
        <FromPopulation actor="XmppWebSocket"/>
      </ActorReference>
      <ActorReference name="To" exclusive="false">
        <FromPopulation actor="XmppTcp"/>
        <FromPopulation actor="XmppBosh"/>
        <FromPopulation actor="XmppWebSocket"/>
      </ActorReference>
      <SetVariable name="Message">
        <String>Hello</String>
      </SetVariable>
    </StochasticEvent>
    <EventHandler id="MessageReceived" activity="RespondToMessage">
    </EventHandler>
  </Events>
  <Activities>
    <Activity id="StartChatSession">
      <Description>This activity starts a chat session, by sending a chat message to a random recipient.</Description>
      <Start/>
      <Action actor="From" action="SendChatMessage">
        <Argument name="To">
          <Script>To.FullJID</Script>
        </Argument>
        <Argument name="Body">
          <Variable name="Message"/>
        </Argument>
      </Action>
      <Inc counter="Tx"/>
      <Stop/>
    </Activity>
    <Activity id="RespondToMessage">
      <Description>This activity responds to incoming chat messages, thus creating a short chat session.</Description>
      <Start/>
      <Inc counter="Rx"/>
      <Delay duration="PT5S"/>
      <Conditional>
        <Condition condition="e.Body='Hello'">
          <Action actor="To" action="SendChatMessage">
            <Argument name="To">
              <Script>e.From</Script>
            </Argument>
            <Argument name="Body">
              <String>How are you?</String>
            </Argument>
          </Action>
          <Inc counter="Tx"/>
        </Condition>
        <Condition condition="e.Body='How are you?'">
          <Action actor="To" action="SendChatMessage">
            <Argument name="To">
              <Script>e.From</Script>
            </Argument>
            <Argument name="Body">
              <String>Fine thanks, and you?</String>
            </Argument>
          </Action>
          <Inc counter="Tx"/>
        </Condition>
        <Condition condition="e.Body='Fine thanks, and you?'">
          <Action actor="To" action="SendChatMessage">
            <Argument name="To">
              <Script>e.From</Script>
            </Argument>
            <Argument name="Body">
              <String>Fine also, thanks</String>
            </Argument>
          </Action>
          <Inc counter="Tx"/>
        </Condition>
        <Condition condition="e.Body='Fine also, thanks'">
          <Action actor="To" action="SendChatMessage">
            <Argument name="To">
              <Script>e.From</Script>
            </Argument>
            <Argument name="Body">
              <String>Bye</String>
            </Argument>
          </Action>
          <Inc counter="Tx"/>
        </Condition>
        <Condition condition="e.Body='Bye'">
          <Action actor="To" action="SendChatMessage">
            <Argument name="To">
              <Script>e.From</Script>
            </Argument>
            <Argument name="Body">
              <String>See you</String>
            </Argument>
          </Action>
          <Inc counter="Tx"/>
        </Condition>
      </Conditional>
      <Stop/>
    </Activity>
  </Activities>
</Model>